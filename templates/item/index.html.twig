{% extends 'base.html.twig' %}

{% block title %}Items - Pax Dei Market{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>üì¶ Items</h1>
    <p class="text-muted">Parcourez tous les items disponibles dans le jeu</p>
    
    <div class="section-divider"></div>

    {# Filtre par cat√©gorie #}
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">üîç Filtrer par cat√©gorie</h5>
            <div class="btn-group flex-wrap" role="group">
                <a href="{{ path('item_index') }}" 
                   class="btn btn-sm btn-{% if not currentCategory %}primary{% else %}outline-primary{% endif %}">
                    Toutes les cat√©gories ({{ items|length }})
                </a>
                {% for category in categories %}
                <a href="{{ path('item_index', {'category': category.id}) }}" 
                   class="btn btn-sm btn-{% if currentCategory == category.id %}primary{% else %}outline-primary{% endif %}">
                    {{ category.name }}
                </a>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Tableau des items #}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="itemsTable">
                    <thead>
                        <tr>
                            <th style="width: 60px;">Ic√¥ne</th>
                            <th>Nom</th>
                            <th>Cat√©gorie</th>
                            <th>Qualit√©</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                        <tr>
                            <td>
                                {% if item.iconPath %}
                                <img src="{{ item.iconPath }}" 
                                     alt="{{ item.name.Fr ?? item.externalId }}" 
                                     class="img-thumbnail" 
                                     style="width: 48px; height: 48px;">
                                {% else %}
                                <div style="width: 48px; height: 48px; background-color: #e9ecef;" class="d-flex align-items-center justify-content-center">
                                    <span class="text-muted">?</span>
                                </div>
                                {% endif %}
                            </td>
                            <td>
                                <strong class="{% if item.quality == 'rare' %}text-primary{% elseif item.quality == 'uncommon' %}text-success{% endif %}">
                                    {{ item.name.Fr ?? item.name.En ?? item.externalId }}
                                </strong>
                            </td>
                            <td>
                                {% if item.category %}
                                <span class="badge bg-secondary">{{ item.category.name }}</span>
                                {% else %}
                                <span class="badge bg-secondary">Non cat√©goris√©</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if item.quality == 'rare' %}
                                <span class="badge bg-primary">Rare</span>
                                {% elseif item.quality == 'uncommon' %}
                                <span class="badge bg-success">Uncommon</span>
                                {% else %}
                                <span class="badge bg-secondary">Common</span>
                                {% endif %}
                            </td>

                            <td>
                                <a href="{{ path('item_show', {'id': item.id}) }}" class="btn btn-sm btn-primary">
                                    üëÅÔ∏è Voir
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun item trouv√©</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% if items|length > 0 %}
<script>
$(document).ready(function() {
    $('#itemsTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json"
        },
        "pageLength": 25,
        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Tous"]],
        "order": [[1, "asc"]],
        "columnDefs": [
            { "orderable": false, "targets": [0, 4] }
        ],
        "searching": true,
        "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rt<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
        "stateSave": true
    });
});
</script>
{% endif %}
{% endblock %}
