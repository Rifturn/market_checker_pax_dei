{% extends 'base.html.twig' %}

{% block title %}{{ item.name.Fr ?? item.externalId }} - Pax Dei Market{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>
                {% if item.iconPath %}
                <img src="{{ item.iconPath }}" alt="{{ item.name.Fr ?? item.externalId }}" class="me-2" style="width: 64px; height: 64px;">
                {% endif %}
                <span class="{% if item.quality == 'rare' %}text-primary{% elseif item.quality == 'uncommon' %}text-success{% endif %}">
                    {{ item.name.Fr ?? item.name.En ?? item.externalId }}
                </span>
            </h1>
            
            <div class="section-divider"></div>

            {# Informations principales #}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üìã Informations</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            {% if item.name.Fr %}
                            <tr>
                                <th style="width: 30%;">Nom (FR)</th>
                                <td>{{ item.name.Fr }}</td>
                            </tr>
                            {% endif %}
                            {% if item.name.En %}
                            <tr>
                                <th>Nom (EN)</th>
                                <td>{{ item.name.En }}</td>
                            </tr>
                            {% endif %}
                            <tr>
                                <th>ID Externe</th>
                                <td><code>{{ item.externalId }}</code></td>
                            </tr>
                            <tr>
                                <th>Cat√©gorie</th>
                                <td>
                                    {% if item.category %}
                                    <span class="badge bg-secondary">{{ item.category.name }}</span>
                                    {% else %}
                                    <span class="text-muted">Non cat√©goris√©</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Qualit√©</th>
                                <td>
                                    {% if item.quality == 'rare' %}
                                    <span class="badge bg-primary">Rare</span>
                                    {% elseif item.quality == 'uncommon' %}
                                    <span class="badge bg-success">Uncommon</span>
                                    {% else %}
                                    <span class="badge bg-secondary">Common</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            {# Spells associ√©s #}
            {% if spellItems|length > 0 %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">‚ú® Sorts associ√©s</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        {% for spellItem in spellItems %}
                        <div class="col-md-6 mb-3">
                            <div class="card border-{% if item.quality == 'rare' %}primary{% elseif item.quality == 'uncommon' %}success{% else %}secondary{% endif %}">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        {% if spellItem.spell.iconPath %}
                                        <img src="{{ spellItem.spell.iconPath|spell_icon_url }}" 
                                             alt="{{ spellItem.spell.name }}" 
                                             class="me-3" 
                                             style="width: 48px; height: 48px; background-color: #1e3a5f; padding: 4px; border-radius: 4px;">
                                        {% endif %}
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">{{ spellItem.spell.name }}</h6>
                                            {% if spellItem.spell.cooldownDuration %}
                                            <small class="text-muted">‚è±Ô∏è Cooldown: {{ spellItem.spell.cooldownDuration }}s</small>
                                            {% endif %}
                                        </div>
                                        <a href="{{ path('spell_show', {'id': spellItem.spell.id}) }}" class="btn btn-sm btn-primary">
                                            Voir
                                        </a>
                                    </div>
                                    {% if spellItem.spell.description %}
                                    <div class="mt-2">
                                        <small class="text-muted">{{ spellItem.spell.description|raw|striptags|slice(0, 150) }}{% if spellItem.spell.description|length > 150 %}...{% endif %}</small>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            {# Recettes de fabrication #}
            {% if recipes|length > 0 %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üî® Recettes de fabrication</h5>
                </div>
                <div class="card-body">
                    {% for recipe in recipes %}
                    <div class="mb-4">
                        <h6 class="text-primary">{{ recipe.name }}</h6>
                        <p class="text-muted small">ID: <code>{{ recipe.id }}</code></p>
                        
                        {# CraftingStats #}
                        {% if recipe.craftingStats %}
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Level</th>
                                        <th>Probabilit√© de r√©ussite</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for stat in recipe.craftingStats %}
                                    <tr>
                                        <td>{{ stat.level ?? 'N/A' }}</td>
                                        <td>
                                            {% if stat.calculatedProbability is defined %}
                                                {{ (stat.calculatedProbability * 100)|number_format(2) }}%
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% endif %}
                        
                        {# Avatars capables de crafter #}
                        {% if recipe.capableAvatars|length > 0 %}
                        <div class="mt-3">
                            <h6 class="text-success">üë§ Avatars capables de crafter (>80% de r√©ussite)</h6>
                            <div class="list-group">
                                {% for capable in recipe.capableAvatars %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">
                                                <a href="{{ path('avatar_show', {'id': capable.avatar.id}) }}" class="text-decoration-none">
                                                    {{ capable.avatar.name }}
                                                </a>
                                                <small class="text-muted">({{ capable.avatar.user.username }})</small>
                                            </h6>
                                            <p class="mb-1">
                                                <span class="badge bg-info">{{ capable.skill.name }} - Niveau {{ capable.level }}</span>
                                            </p>
                                        </div>
                                        <div class="text-end">
                                            <div class="mb-1">
                                                <strong class="text-success">{{ (capable.currentProbability * 100)|number_format(2) }}%</strong>
                                            </div>
                                            {% if capable.nextProbability is not null %}
                                            <small class="text-muted">
                                                Avec pri√®re : <strong>{{ (capable.nextProbability * 100)|number_format(2) }}%</strong>
                                            </small>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% else %}
                        <div class="mt-3">
                            <div class="alert alert-warning">
                                <small>Aucun avatar n'a plus de 80% de chance de crafter cet item.</small>
                            </div>
                        </div>
                        {% endif %}
                        
                        {# Inputs de la recette #}
                        {% if recipe.inputs|length > 0 %}
                        <div class="mt-3">
                            <strong>Ingr√©dients requis :</strong>
                            <ul class="list-group mt-2">
                                {% for input in recipe.inputs %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ input.entity.name ?? input.entity.id }}
                                    <span class="badge bg-primary">{{ input.quantity ?? 1 }}</span>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                        
                        {# Outputs de la recette #}
                        {% if recipe.outputs|length > 0 %}
                        <div class="mt-3">
                            <strong>Produits :</strong>
                            <ul class="list-group mt-2">
                                {% for output in recipe.outputs %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ output.entity.name ?? output.entity.id }}
                                    <span class="badge bg-success">{{ output.quantity ?? 1 }}</span>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                    
                    {% if not loop.last %}
                    <hr>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {# M√©tadonn√©es #}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">‚ÑπÔ∏è M√©tadonn√©es</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th style="width: 30%;">ID Interne</th>
                                <td>{{ item.id }}</td>
                            </tr>
                            <tr>
                                <th>Cr√©√© le</th>
                                <td>{{ item.createdAt|date('d/m/Y H:i') }}</td>
                            </tr>
                            <tr>
                                <th>Mis √† jour le</th>
                                <td>{{ item.updatedAt|date('d/m/Y H:i') }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Sidebar #}
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('item_index') }}" class="btn btn-secondary">
                            ‚Üê Retour √† la liste
                        </a>
                        {% if item.category %}
                        <a href="{{ path('item_index', {'category': item.category.id}) }}" class="btn btn-outline-secondary">
                            Voir {{ item.category.name }}
                        </a>
                        {% endif %}
                        <a href="{{ path('market_items') }}" class="btn btn-outline-primary">
                            üìä Voir sur le Market
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                        <hr>
                        <a href="{{ path('admin_item_show', {'id': item.id}) }}" class="btn btn-warning">
                            ‚öôÔ∏è Mode Admin
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Ic√¥ne agrandie #}
            {% if item.iconPath %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üñºÔ∏è Ic√¥ne</h5>
                </div>
                <div class="card-body text-center">
                    <img src="{{ item.iconPath }}" 
                         alt="{{ item.name.Fr ?? item.externalId }}" 
                         class="img-fluid"
                         style="max-width: 200px;">
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
