{% extends 'base.html.twig' %}

{% block title %}Analyse des Cat√©gories - Pax Dei Market{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>üìä Analyse des Cat√©gories</h1>
    <p class="text-muted">{{ totalItems }} items r√©partis dans {{ categoryStats|length }} cat√©gories</p>
    
    <div class="mb-4">
        <a href="{{ path('market_items') }}" class="btn btn-secondary">‚Üê Retour aux items</a>
    </div>

    <div class="row">
        {% for category, stats in categoryStats %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card stats-card h-100">
                <div class="card-body">
                    <h3 class="card-title h5">{{ category }}</h3>
                    <div class="stats-number">{{ stats.count }}</div>
                    <div class="stats-label">items</div>
                    
                    {% if stats.items|length > 0 %}
                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Exemples :</h6>
                            <ul class="list-unstyled">
                                {% for item in stats.items %}
                                <li class="mb-2">
                                    <img src="{{ item.iconPath }}" alt="{{ item.name }}" style="width: 24px; height: 24px; object-fit: contain; border-radius: var(--radius-sm);" class="me-1">
                                    <small>{{ item.name }}</small>
                                </li>
                                {% endfor %}
                            </ul>
                            {% if stats.count > stats.items|length %}
                            <small class="text-muted">... et {{ stats.count - stats.items|length }} autre(s)</small>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
