{% extends 'base.html.twig' %}

{% block title %}{{ item ? (item.getName()['Fr'] ?? item.getName()['En'] ?? 'Item') : 'Item' }} - Toutes les r√©gions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <style>
        .item-icon { 
            width: 48px; 
            height: 48px; 
            object-fit: contain;
            border-radius: var(--radius-md);
        }
        .item-header {
            background: var(--bg-secondary);
            padding: 1.5rem;
            border-radius: var(--radius-lg);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        .region-section {
            margin-bottom: 2rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <a href="{{ returnUrl }}" class="btn btn-secondary mb-3">‚Üê Retour</a>
    
    <h1>üìä D√©tails des ventes - Toutes les r√©gions</h1>
    <p class="text-muted">{{ item ? (item.getName()['Fr'] ?? item.getName()['En'] ?? 'Item inconnu') : 'Item inconnu' }}</p>
    
    {% if item %}
        <div class="item-header">
            <img src="{{ item.getIconPath() }}" alt="icon" class="item-icon">
            <div>
                <h3 class="mb-1 {% if item.getQuality() == 'rare' %}text-primary{% elseif item.getQuality() == 'uncommon' %}text-success{% endif %}">
                    {{ item.getName()['Fr'] ?? item.getName()['En'] }}
                </h3>
                <span class="badge bg-primary">{{ item.getCategory() ? item.getCategory().getName() : 'Aucune cat√©gorie' }}</span>
            </div>
        </div>
    {% endif %}
    
    {% if listingsByRegion|length > 0 %}
        {% for region, listings in listingsByRegion %}
            <div class="region-section">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">üåç {{ region }} ({{ listings|length }} vente(s))</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                        <table class="table table-striped table-hover listings-table">
                            <thead>
                                <tr>
                                    <th>R√©gion</th>
                                    <th>ID Listing</th>
                                    <th>Quantit√©</th>
                                    <th>Prix (gold)</th>
                                    <th>Prix unitaire</th>
                                    <th>Derni√®re vue</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for listing in listings %}
                                    <tr>
                                        <td>{{ region }}</td>
                                        <td><code>{{ listing.id }}</code></td>
                                        <td><span class="badge bg-info">{{ listing.quantity }}</span></td>
                                        <td><strong>{{ listing.price }}</strong> ü™ô</td>
                                        <td>{{ (listing.price / listing.quantity)|number_format(2) }} ü™ô</td>
                                        <td data-order="{{ listing.lastSeen }}">
                                            {% set lastSeenDate = listing.lastSeen|date('Y-m-d H:i') %}
                                            {% set now = 'now'|date('U') %}
                                            {% set diff = now - listing.lastSeen %}
                                            {% if diff < 3600 %}
                                                <span class="badge bg-success" title="{{ lastSeenDate }}">{{ (diff / 60)|round }} min</span>
                                            {% elseif diff < 86400 %}
                                                <span class="badge bg-info" title="{{ lastSeenDate }}">{{ (diff / 3600)|round }} h</span>
                                            {% else %}
                                                <span class="badge bg-warning" title="{{ lastSeenDate }}">{{ (diff / 86400)|round }} j</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-warning">
            <strong>Aucune vente trouv√©e</strong><br>
            Cet item n'a actuellement aucune vente active dans aucune r√©gion.
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.listings-table').DataTable({
                order: [[4, 'asc']],
                scrollX: true,
                autoWidth: false,
                pageLength: 10,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                }
            });
        });
    </script>
{% endblock %}
