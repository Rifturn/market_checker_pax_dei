{% extends 'base.html.twig' %}

{% block title %}{{ item ? (item.getName()['Fr'] ?? item.getName()['En'] ?? 'Item') : 'Item' }} - {{ region }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <style>
        .item-icon { 
            width: 48px; 
            height: 48px; 
            object-fit: contain;
            border-radius: var(--radius-md);
        }
        .item-header {
            background: var(--bg-secondary);
            padding: 1.5rem;
            border-radius: var(--radius-lg);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <a href="{{ returnUrl }}" class="btn btn-secondary mb-3">‚Üê Retour</a>
    
    <h1>üìä D√©tails des ventes</h1>
    <p class="text-muted">{{ item ? (item.getName()['Fr'] ?? item.getName()['En'] ?? 'Item inconnu') : 'Item inconnu' }} - R√©gion {{ region }}</p>
    
    {% if item %}
        <div class="item-header">
            <img src="{{ item.getIconPath() }}" alt="icon" class="item-icon">
            <div>
                <h3 class="mb-1 {% if item.getQuality() == 'rare' %}text-primary{% elseif item.getQuality() == 'uncommon' %}text-success{% endif %}">
                    {{ item.getName()['Fr'] ?? item.getName()['En'] }}
                </h3>
                <span class="badge bg-primary">{{ item.getCategory() ? item.getCategory().getName() : 'Aucune cat√©gorie' }}</span>
            </div>
        </div>
    {% endif %}
    
    {% if listings|length > 0 %}
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">üåç {{ region }} ({{ listings|length }} vente(s))</h4>
            </div>
            <div class="card-body">
                <table id="listingsTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>R√©gion</th>
                            <th>ID Listing</th>
                            <th>Quantit√©</th>
                            <th>Prix (gold)</th>
                            <th>Prix unitaire</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for listing in listings %}
                            <tr>
                                <td>{{ listing.getZone() }}</td>
                                <td><code>{{ listing.getId() }}</code></td>
                                <td><span class="badge bg-info">{{ listing.getQuantity() }}</span></td>
                                <td><strong>{{ listing.getPrice() }}</strong> ü™ô</td>
                                <td>{{ (listing.getPrice() / listing.getQuantity())|number_format(2) }} ü™ô</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning">
            <strong>Aucune vente trouv√©e</strong><br>
            Cet item n'a actuellement aucune vente active dans cette r√©gion.
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#listingsTable').DataTable({
                order: [[4, 'asc']],
                pageLength: 10,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                }
            });
        });
    </script>
{% endblock %}
