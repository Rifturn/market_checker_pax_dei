{% extends 'base_admin.html.twig' %}

{% block title %}Éditer {{ avatar.name }} - Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>✏️ Éditer {{ avatar.name }}</h1>
    <p class="text-muted">Modification de l'avatar</p>
    
    <div class="section-divider"></div>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.name) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.user) }}
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
            <a href="{{ path('admin_avatar_show', {'id': avatar.id}) }}" class="btn btn-secondary">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
