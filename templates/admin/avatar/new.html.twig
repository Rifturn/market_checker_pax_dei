{% extends 'base_admin.html.twig' %}

{% block title %}Nouvel Avatar - Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>➕ Créer un avatar</h1>
    <p class="text-muted">Création d'un nouvel avatar</p>
    
    <div class="section-divider"></div>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.name) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.user) }}
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a href="{{ path('admin_avatar_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
