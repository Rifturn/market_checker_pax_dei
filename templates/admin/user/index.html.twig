{% extends 'base_admin.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>ğŸ‘¥ Gestion des Utilisateurs</h1>
            <p class="text-muted">CrÃ©er et gÃ©rer les comptes utilisateurs</p>
        </div>
        <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
            â• Nouvel utilisateur
        </a>
    </div>

    <div class="section-divider"></div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if users|length > 0 %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                <table id="usersTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom d'utilisateur</th>
                            <th>RÃ´les</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>
                                    <strong>{{ user.username }}</strong>
                                    {% if user.id == app.user.id %}
                                        <span class="badge bg-info ms-2">Vous</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="badge bg-danger">Admin</span>
                                    {% endif %}
                                    <span class="badge bg-secondary">User</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-outline-secondary">
                                            âœï¸ Modifier
                                        </a>
                                        {% if user.id != app.user.id %}
                                            <form action="{{ path('admin_user_delete', {id: user.id}) }}" method="post" class="d-inline" onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cet utilisateur ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    ğŸ—‘ï¸ Supprimer
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <strong>â„¹ï¸ Aucun utilisateur</strong>
            <p class="mb-0">Commencez par crÃ©er un utilisateur.</p>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                },
                order: [[0, 'asc']],
                pageLength: 25,
                scrollX: true,
                autoWidth: false
            });
        });
    </script>
{% endblock %}
