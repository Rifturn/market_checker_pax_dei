{% extends 'base_admin.html.twig' %}

{% block title %}Modifier {{ user.username }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="mb-4">
        <h1>âœï¸ Modifier l'utilisateur : {{ user.username }}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}">Utilisateurs</a></li>
                <li class="breadcrumb-item active">Modifier</li>
            </ol>
        </nav>
    </div>

    <div class="section-divider"></div>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Nom d'utilisateur *</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{ user.username }}" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Nouveau mot de passe</label>
                    <input type="password" class="form-control" id="password" name="password">
                    <div class="form-text">Laissez vide pour conserver le mot de passe actuel</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">RÃ´les</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="roles[]" value="ROLE_USER" checked disabled>
                        <label class="form-check-label">
                            Utilisateur (automatique)
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="roles[]" value="ROLE_ADMIN" id="roleAdmin" 
                            {% if 'ROLE_ADMIN' in user.roles %}checked{% endif %}>
                        <label class="form-check-label" for="roleAdmin">
                            Administrateur
                        </label>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">ğŸ’¾ Enregistrer les modifications</button>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
