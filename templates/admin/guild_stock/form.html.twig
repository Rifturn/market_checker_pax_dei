{% extends 'base_admin.html.twig' %}

{% block title %}{{ stock.id ? 'Modifier' : 'Ajouter' }} une relique{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.bootstrap5.css">
    <style>
        .card-body {
            overflow: visible !important;
        }
        .ts-dropdown {
            z-index: 9999 !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>{{ stock.id ? '‚úèÔ∏è Modifier' : '‚ûï Ajouter' }} une relique</h1>
            <p class="text-muted">G√©rez le stock de reliques de votre guilde</p>
        </div>
        <a href="{{ path('admin_guild_stock_index') }}" class="btn btn-outline-secondary">
            ‚¨ÖÔ∏è Retour au stock
        </a>
    </div>

    <div class="section-divider"></div>

    {{ form_start(form) }}
    
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    {{ form_row(form.item) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.quantity) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <a href="{{ path('admin_guild_stock_index') }}" class="btn btn-secondary">
            Annuler
        </a>
        <button type="submit" class="btn btn-primary">
            üíæ {{ stock.id ? 'Enregistrer' : 'Ajouter' }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            new TomSelect('.item-select', {
                placeholder: 'Rechercher une relique...',
                maxOptions: 50,
                dropdownParent: 'body'
            });
        });
    </script>
{% endblock %}
