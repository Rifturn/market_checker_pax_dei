{% extends 'base_admin.html.twig' %}

{% block title %}Stock de Guilde - Reliques{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>üèõÔ∏è Stock de Guilde - Reliques</h1>
            <p class="text-muted">G√©rez le stock de reliques de votre guilde</p>
        </div>
        <a href="{{ path('admin_guild_stock_new') }}" class="btn btn-primary">
            ‚ûï Ajouter une relique
        </a>
    </div>

    <div class="section-divider"></div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if stocks|length > 0 %}
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Ic√¥ne</th>
                            <th>Relique</th>
                            <th>Quantit√©</th>
                            <th>D√©bloque</th>
                            <th>Lien</th>
                            <th>Derni√®re MAJ</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for stock in stocks %}
                            <tr>
                                <td>
                                    <img src="{{ stock.item.iconPath }}" alt="{{ stock.item.name['Fr'] ?? stock.item.name['En'] }}" width="32" height="32" loading="lazy">
                                </td>
                                <td>
                                    <strong class="{% if stock.item.quality == 'rare' %}text-primary{% elseif stock.item.quality == 'uncommon' %}text-success{% endif %}">
                                        {{ stock.item.name['Fr'] ?? stock.item.name['En'] ?? stock.item.externalId }}
                                    </strong>
                                </td>
                                <td>
                                    <span class="badge bg-{% if stock.quantity > 0 %}success{% else %}secondary{% endif %} fs-6">
                                        {{ stock.quantity }}
                                    </span>
                                </td>
                                <td>
                                    {% if recipes[stock.item.id] is defined %}
                                        {% set output = recipes[stock.item.id].output %}
                                        <div class="d-flex align-items-center gap-2">
                                            <img src="{{ output.iconPath }}" alt="{{ output.name['Fr'] ?? output.name['En'] }}" width="24" height="24" loading="lazy">
                                            <a href="{{ output.url }}" target="_blank" class="text-reset text-decoration-none {% if output.quality == 'rare' %}text-primary{% elseif output.quality == 'uncommon' %}text-success{% endif %}">
                                                {{ output.name['Fr'] ?? output.name['En'] ?? output.externalId }}
                                            </a>
                                            {% if recipes[stock.item.id].outputQuantity %}
                                                <span class="badge bg-secondary">√ó{{ recipes[stock.item.id].outputQuantity }}</span>
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        <span class="text-muted fst-italic">Aucune recette</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ stock.item.url }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                        üîó Voir
                                    </a>
                                </td>
                                <td>
                                    <small class="text-muted">{{ stock.updatedAt|date('d/m/Y H:i') }}</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('admin_guild_stock_edit', {id: stock.id}) }}" class="btn btn-outline-secondary">
                                            ‚úèÔ∏è Modifier
                                        </a>
                                        <form action="{{ path('admin_guild_stock_delete', {id: stock.id}) }}" method="post" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette relique du stock ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
                                            <button type="submit" class="btn btn-outline-danger">
                                                üóëÔ∏è Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <h5>Aucune relique en stock</h5>
            <p class="mb-0">
                Commencez par <a href="{{ path('admin_guild_stock_new') }}">ajouter une relique</a> au stock de votre guilde.
            </p>
        </div>
    {% endif %}
</div>
{% endblock %}
