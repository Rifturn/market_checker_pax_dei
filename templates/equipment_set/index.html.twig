{% extends 'base.html.twig' %}

{% block title %}Mes Sets d'√âquipement - Pax Dei{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>‚öîÔ∏è Mes Sets d'√âquipement</h1>
        <a href="{{ path('equipment_set_new') }}" class="btn btn-primary">
            ‚ûï Cr√©er un nouveau set
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if sets is empty %}
        <div class="alert alert-info">
            <h4>Aucun set d'√©quipement</h4>
            <p>Cr√©ez votre premier set pour organiser vos builds !</p>
            <a href="{{ path('equipment_set_new') }}" class="btn btn-primary">Cr√©er un set</a>
        </div>
    {% else %}
        <div class="row">
            {% for set in sets %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ set.name }}</h5>
                            <p class="text-muted small">
                                Cr√©√© le {{ set.createdAt|date('d/m/Y H:i') }}
                            </p>
                            
                            <div class="equipment-preview mb-3">
                                <div class="row g-2">
                                    {% set slots = {
                                        'helmet': 'ü™ñ Casque',
                                        'chest': 'üéΩ Torse',
                                        'gloves': 'üß§ Gants',
                                        'bracers': 'üõ°Ô∏è Brassards',
                                        'legs': 'üëñ Jambes',
                                        'boots': 'üë¢ Bottes',
                                        'mainHand': '‚öîÔ∏è Main principale',
                                        'offHand': 'üõ°Ô∏è Main secondaire'
                                    } %}
                                    
                                    {% for slot, label in slots %}
                                        {% set item = attribute(set, 'get' ~ (slot|capitalize)) %}
                                        {% if item %}
                                            <div class="col-6">
                                                <small class="text-muted d-block">{{ label }}</small>
                                                <div class="d-flex align-items-center">
                                                    {% if item.iconPath %}
                                                        <img src="{{ item.iconPath }}" alt="{{ item.name.Fr ?? item.externalId }}" 
                                                             class="me-1" style="width: 24px; height: 24px;">
                                                    {% endif %}
                                                    <small class="quality-{{ item.quality }}">
                                                        {{ item.name.Fr ?? item.externalId }}
                                                    </small>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            
                            <div class="d-flex gap-2">
                                <a href="{{ path('equipment_set_show', {id: set.id}) }}" class="btn btn-sm btn-primary flex-grow-1">
                                    üëÅÔ∏è Voir
                                </a>
                                <a href="{{ path('equipment_set_edit', {id: set.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    ‚úèÔ∏è Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<style>
.equipment-preview small {
    font-size: 0.75rem;
}
.quality-rare {
    color: #0d6efd;
    font-weight: bold;
}
.quality-uncommon {
    color: #198754;
    font-weight: bold;
}
.quality-common {
    color: #6c757d;
}
</style>
{% endblock %}
