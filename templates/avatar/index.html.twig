{% extends 'base.html.twig' %}

{% block title %}Avatars - Pax Dei Market{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .skill-progress-container {
            position: relative;
            height: 20px;
        }
        .skill-progress-text {
            position: absolute;
            width: 100%;
            text-align: center;
            line-height: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            color: #1f2937;
            text-shadow: 0 0 3px white, 0 0 3px white, 0 0 3px white;
            z-index: 1;
        }
        .progress {
            position: relative;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>üë§ Avatars de la Communaut√©</h1>
    <p class="text-muted">D√©couvrez les avatars et leurs comp√©tences</p>
    
    <div class="section-divider"></div>

    {% if app.user %}
        {% set userAvatar = null %}
        {% for avatar in avatars %}
            {% if avatar.user.id == app.user.id %}
                {% set userAvatar = avatar %}
            {% endif %}
        {% endfor %}
        
        <div class="mb-3">
            {% if userAvatar %}
                <a href="{{ path('avatar_show', {'id': userAvatar.id}) }}" class="btn btn-primary">üëÅÔ∏è Voir mon avatar</a>
                <a href="{{ path('avatar_edit', {'id': userAvatar.id}) }}" class="btn btn-warning">‚úèÔ∏è √âditer mon avatar</a>
            {% else %}
                <a href="{{ path('avatar_new') }}" class="btn btn-success">‚ûï Cr√©er mon avatar</a>
            {% endif %}
        </div>
    {% else %}
        <div class="alert alert-info">
            <a href="{{ path('app_login') }}">Connectez-vous</a> pour cr√©er votre avatar et suivre vos comp√©tences !
        </div>
    {% endif %}

    <div class="row">
        {% for avatar in avatars %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{ avatar.name }}</h5>
                    <p class="text-muted small mb-3">
                        <i class="bi bi-person"></i> {{ avatar.user.username }}
                    </p>
                    
                    <div class="mb-3">
                        <span class="badge bg-info">{{ avatar.avatarSkills|length }} comp√©tences</span>
                        <span class="badge bg-secondary">{{ avatar.createdAt|date('d/m/Y') }}</span>
                    </div>

                    {% if avatar.avatarSkills|length > 0 %}
                    <div class="mb-2">
                        <strong>Top Skills:</strong>
                    </div>
                    {% set topSkills = avatar.avatarSkills|sort((a, b) => b.level <=> a.level)|slice(0, 3) %}
                    {% for avatarSkill in topSkills %}
                    <div class="mb-2">
                        <small class="text-muted">{{ avatarSkill.skill.name }}</small>
                        <div class="skill-progress-container">
                            <div class="skill-progress-text">{{ avatarSkill.level }}/{{ avatarSkill.skill.skillLevelCap }}</div>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar bg-{% if avatarSkill.skill.uiGroup == 'combat' %}danger{% else %}primary{% endif %}" 
                                     role="progressbar" 
                                     style="width: {{ (avatarSkill.level / avatarSkill.skill.skillLevelCap * 100)|round }}%">
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    {% endif %}
                    
                    <a href="{{ path('avatar_show', {'id': avatar.id}) }}" class="btn btn-primary btn-sm mt-3">Voir d√©tails</a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info">
                Aucun avatar n'a encore √©t√© cr√©√©. Soyez le premier !
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
