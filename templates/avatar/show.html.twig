{% extends 'base.html.twig' %}

{% block title %}{{ avatar.name }} - Pax Dei Market{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .skill-progress-container {
            position: relative;
            height: 30px;
        }
        .skill-progress-text {
            position: absolute;
            width: 100%;
            text-align: center;
            line-height: 30px;
            font-weight: 600;
            color: #1f2937;
            text-shadow: 0 0 3px white, 0 0 3px white, 0 0 3px white;
            z-index: 1;
        }
        .progress {
            position: relative;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>üë§ {{ avatar.name }}</h1>
            <p class="text-muted">Avatar de {{ avatar.user.username }}</p>
            
            <div class="section-divider"></div>

            {% if avatar.avatarSkills|length > 0 %}
            <h3 class="mb-4">üìä Comp√©tences ({{ avatar.avatarSkills|length }})</h3>
            
            {# Skills de Combat #}
            {% set combatSkills = avatar.avatarSkills|filter(s => s.skill.uiGroup == 'combat')|sort((a, b) => b.level <=> a.level) %}
            {% if combatSkills|length > 0 %}
            <h4 class="text-danger">‚öîÔ∏è Combat ({{ combatSkills|length }})</h4>
            <div class="row mb-4">
                {% for avatarSkill in combatSkills %}
                <div class="col-md-6 mb-3">
                    <div class="card border-danger">
                        <div class="card-body">
                            <h6 class="card-title">{{ avatarSkill.skill.name }}</h6>
                            {% set displayLevel = avatarSkill.level == 0 ? 1 : avatarSkill.level %}
                            <div class="skill-progress-container">
                                <div class="skill-progress-text">Niveau {{ displayLevel }} / {{ avatarSkill.skill.skillLevelCap }}</div>
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-danger" role="progressbar" 
                                         style="width: {{ (displayLevel / avatarSkill.skill.skillLevelCap * 100)|round }}%">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}

            {# Skills de Crafting #}
            {% set craftingSkills = avatar.avatarSkills|filter(s => s.skill.uiGroup == 'crafting')|sort((a, b) => b.level <=> a.level) %}
            {% if craftingSkills|length > 0 %}
            <h4 class="text-primary">üõ†Ô∏è Crafting ({{ craftingSkills|length }})</h4>
            <div class="row mb-4">
                {% for avatarSkill in craftingSkills %}
                <div class="col-md-6 mb-3">
                    <div class="card border-primary">
                        <div class="card-body">
                            <h6 class="card-title">{{ avatarSkill.skill.name }}</h6>
                            {% set displayLevel = avatarSkill.level == 0 ? 1 : avatarSkill.level %}
                            <div class="skill-progress-container">
                                <div class="skill-progress-text">Niveau {{ displayLevel }} / {{ avatarSkill.skill.skillLevelCap }}</div>
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-primary" role="progressbar" 
                                         style="width: {{ (displayLevel / avatarSkill.skill.skillLevelCap * 100)|round }}%">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
            {% else %}
            <div class="alert alert-info">
                Cet avatar n'a pas encore de comp√©tences d√©finies.
            </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <p><strong>Joueur:</strong> {{ avatar.user.username }}</p>
                    <p><strong>Comp√©tences:</strong> {{ avatar.avatarSkills|length }}</p>
                    <p><strong>Cr√©√© le:</strong> {{ avatar.createdAt|date('d/m/Y') }}</p>
                    
                    <div class="d-grid gap-2 mt-3">
                        <a href="{{ path('avatar_index') }}" class="btn btn-secondary">‚Üê Tous les avatars</a>
                        {% if app.user and app.user == avatar.user %}
                        <a href="{{ path('avatar_skills', {'id': avatar.id}) }}" class="btn btn-success">üìä √âditer mes comp√©tences</a>
                        <a href="{{ path('avatar_teleports', {'id': avatar.id}) }}" class="btn btn-info">üó∫Ô∏è G√©rer mes t√©l√©ports</a>
                        <a href="{{ path('avatar_edit', {'id': avatar.id}) }}" class="btn btn-warning">‚úèÔ∏è √âditer mon avatar</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
